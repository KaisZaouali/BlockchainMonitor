{
  "name": "BlockchainMonitor E2E Tests",
  "testDir": "./",
  "testMatch": "**/*.cs",
  "timeout": 30000,
  "expect": {
    "timeout": 5000
  },
  "fullyParallel": true,
  "forbidOnly": false,
  "retries": 2,
  "workers": 1,
  "reporter": [
    ["html"],
    ["json", { "outputFile": "test-results/e2e-results.json" }]
  ],
  "use": {
    "baseURL": "http://localhost:5003",
    "trace": "on-first-retry",
    "screenshot": "only-on-failure",
    "video": "retain-on-failure"
  },
  "projects": [
    {
      "name": "chromium",
      "use": {
        "browserName": "chromium"
      }
    },
    {
      "name": "firefox",
      "use": {
        "browserName": "firefox"
      }
    },
    {
      "name": "webkit",
      "use": {
        "browserName": "webkit"
      }
    }
  ]
} 